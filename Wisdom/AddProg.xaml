                <RichTextBox TextChanged="RichTextBox_TextChanged" x:Name="Skills" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="5" Grid.RowSpan="4" FontSize="26" IsReadOnly="False" ContextMenu="{StaticResource CtxMenu}" Tag="{x:Reference Name=RSkills}">
