                        </Grid.RowDefinitions>

                        <Border BorderThickness="1" BorderBrush="Black" Grid.Column="1" Grid.Row="0" Grid.RowSpan="1">
                            <RichTextBox x:Name="NText" Grid.Column="1"  FontSize="26" VerticalAlignment="Stretch" FontFamily="Times New Roman" TextChanged="RichTextBox_TextChanged" Background="{x:Null}" BorderBrush="{x:Null}"  SelectionBrush="#FF00A2E8" SelectionTextBrush="#FFEFE4B0" ContextMenu="{StaticResource CtxMenu}" Tag="{x:Reference Name=Cell0}">
