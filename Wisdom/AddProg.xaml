                        <Button FontFamily="Segoe UI" FontSize="13" Tag="-1" Click="Counting">▼</Button>
                    </StackPanel>
                </StackPanel>

                <Label Content="Максимальная учебная нагрузка: "  Grid.Row="17"  Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="28"></Label>
                <Label x:Name="Max" Content="" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,0,0" Grid.Row="17" VerticalAlignment="Bottom" FontSize="28"/>

                <Border BorderThickness="1" BorderBrush="Black" Grid.Row="1" Grid.Column="1" Grid.RowSpan="5">
