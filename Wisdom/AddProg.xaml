                    <ComboBoxItem Content="09.02.03 Программирование в компьютерных системах"/>
                </ComboBox>

                <Label Content="Аудиторная нагрузка, часы" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="13" VerticalAlignment="Bottom" FontSize="28"/>
                <StackPanel Grid.Row="13" Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBox x:Name="Usual" TextAlignment="Right" MaxLength="3" MinWidth="70" FontSize="26" PreviewTextInput="Numbers" TextChanged="Hours"></TextBox>
                    <StackPanel x:Name="N12" Tag="{x:Reference Name=Usual}">
