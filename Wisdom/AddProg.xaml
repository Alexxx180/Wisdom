                        </Border>
                        <Border BorderThickness="1" BorderBrush="Black" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                            <Button x:Name="BSbSelect" Grid.ColumnSpan="1" HorizontalAlignment="Center" Margin="0,0,0,0"  VerticalAlignment="Stretch" Padding="0,0,0,0" Click="BSbSelect_Click" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}">
                                <Image x:Name="SmbSelect"  Source="/Novsu.png"/>
                            </Button>
