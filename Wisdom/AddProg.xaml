                        <Button FontFamily="Segoe UI" FontSize="13" Tag="1" Click="Counting">▲</Button>
                        <Button FontFamily="Segoe UI" FontSize="13" Tag="-1" Click="Counting">▼</Button>
                    </StackPanel>
                </StackPanel>
                <Label Content="Самостоятельная работа, часы" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="15" VerticalAlignment="Bottom" FontSize="28"/>
                <StackPanel Grid.Row="15" Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBox x:Name="Self" TextAlignment="Right" MaxLength="3" MinWidth="70" FontSize="26" PreviewTextInput="Numbers"  TextChanged="Hours"></TextBox>
