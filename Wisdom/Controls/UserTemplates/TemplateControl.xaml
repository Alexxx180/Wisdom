<UserControl x:Class="Wisdom.Controls.UserTemplates.TemplateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wisdom.Controls.UserTemplates"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="45" d:DesignWidth="1000">
    <Button HorizontalContentAlignment="Left" Style="{StaticResource ListCaptions}" Click="CreateFromTemplate">
        <TextBlock x:Name="TemplateName" Text="{Binding Path=FileName}" />
    </Button>
</UserControl>
