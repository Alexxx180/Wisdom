<UserControl x:Class="Wisdom.Controls.HourElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wisdom.Controls"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="30" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*" />
            <ColumnDefinition Width="0.25*" />
        </Grid.ColumnDefinitions>

        <TextBlock  Grid.Column="0" Text="{Binding Path=WorkType}" Style="{StaticResource RegularBox}" />
        <TextBox  Grid.Column="1" Text="{Binding Path=HourValue, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Style="{StaticResource HoursBox}" DataObject.Pasting="PastingHours" PreviewTextInput="Hours" /> 
    </Grid>
</UserControl>
