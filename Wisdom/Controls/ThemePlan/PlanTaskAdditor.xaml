<UserControl x:Class="Wisdom.Controls.ThemePlan.PlanTaskAdditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wisdom.Controls"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="45" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" />
            <ColumnDefinition Width="0.15*" />
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Click="AddTask" Style="{StaticResource ResourceKey=AddButton}"></Button>
        <TextBlock  Grid.Column="1" Text="{Binding Path=TaskHeader}" Style="{StaticResource No2}" />
        <TextBox  Grid.Column="2" Text="" Style="{StaticResource RegularBox}" />
        <TextBox  Grid.Column="3" Text="" Style="{StaticResource HoursBox}" DataObject.Pasting="PastingHours" PreviewTextInput="Hours" />
    </Grid>
</UserControl>
