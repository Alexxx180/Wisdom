<UserControl x:Class="Wisdom.Controls.Tables.ThemePlan.PlanTopicFields"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:themeplan="clr-namespace:Wisdom.Controls.Tables.ThemePlan" 
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=themeplan:PlanTopicAdditor}"
             d:DesignHeight="35" d:DesignWidth="800" Height="35">
    <Grid Grid.Row="1" Style="{StaticResource Dark}" TextBlock.FontWeight="Bold">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1">
            <Viewbox HorizontalAlignment="Left" >
                <TextBlock Text="Раздел">
                    <TextBlock.ToolTip>
                        Номер раздела
                    </TextBlock.ToolTip>
                </TextBlock>
            </Viewbox>
        </Border>

        <Border Grid.Column="2" Grid.ColumnSpan="2">
            <Viewbox HorizontalAlignment="Left">
                <TextBlock Text=" Наименование">
                    <TextBlock.ToolTip>
                        Полное имя раздела
                    </TextBlock.ToolTip>
                </TextBlock>
            </Viewbox>
        </Border>

        <Border Grid.Column="3">
            <Viewbox HorizontalAlignment="Right">
                <TextBlock Text="Часы ">
                    <TextBlock.ToolTip>
                        Часы, отводимые разделу
                    </TextBlock.ToolTip>
                </TextBlock>
            </Viewbox>
        </Border>
    </Grid>
</UserControl>