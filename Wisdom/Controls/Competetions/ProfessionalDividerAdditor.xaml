<UserControl x:Class="Wisdom.Controls.Competetions.ProfessionalDividerAdditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wisdom.Controls.Competetions"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="45" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" />
            <ColumnDefinition Width="0.95*" />
        </Grid.ColumnDefinitions>

        <Button Click="AddDivision" Style="{StaticResource ResourceKey=AddButton}"></Button>
        <Border Background="#FF03C6FF" Grid.Column="1">
            <TextBlock Style="{StaticResource ResourceKey=ListCaptions}" Text="{Binding Path=DividerHeader}" Padding="5"></TextBlock>
        </Border>
    </Grid>
</UserControl>
