<UserControl x:Class="Wisdom.Controls.Forms.DocumentForms.AddDisciplineProgram.MetaDataPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sources="clr-namespace:Wisdom.Controls.Tables.Sources.SourceTypes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.025*"/>
            <ColumnDefinition Width="0.95*"/>
            <ColumnDefinition Width="0.025*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="1" Grid.Column="1" Background="#FFFFFCC7">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="0.95*"/>
            </Grid.RowDefinitions>

            <Border Background="#FF03C6FF">
                <Viewbox Style="{StaticResource ResourceKey=ListCaptions}">
                    <TextBlock Text="Прочая информация"/>
                </Viewbox>
            </Border>
            
            <ScrollViewer Grid.Row="1" Grid.ColumnSpan="1" Grid.Column="1" Grid.RowSpan="1">
                <StackPanel Background="#FFFFFCC7">
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <ScrollViewer Grid.Row="1" Grid.Column="1" Visibility="Hidden">
            <StackPanel Background="#FFFFFCC7" x:Name="EducationSources">
                <sources:SourceTypeElementAdditor/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>