                        </Binding>
                    </ComboBox.Text>
                </ComboBox>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                

                <Viewbox VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <TextBlock Text="Дисциплина" />
                </Viewbox>

                <ComboBox Grid.Row="1" Grid.Column="1" IsEditable="True" FontWeight="Bold">
                    <ComboBox.Style>
                        <StaticResource ResourceKey="NeutralPad"/>
