                <RowDefinition/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>


            <ItemsControl>
                <ItemsControl.ItemsSource>
                    <Binding Path="HourGroups"/>
                </ItemsControl.ItemsSource>
            </ItemsControl>

