<UserControl x:Class="Wisdom.Controls.Forms.DocumentForms.AddDisciplineProgram.HoursPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bind="clr-namespace:Wisdom.Binds"
             xmlns:converters="clr-namespace:Wisdom.Binds.Converters"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:UsedValuesConverter x:Key="UsedValuesConverter" />
        <converters:HoursConverter x:Key="HoursConverter"/>
    </UserControl.Resources>

    <Grid Grid.Row="1" DataContext="{Binding Path=ViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.475*" />
                <ColumnDefinition Width="0.05*" />
                <ColumnDefinition Width="0.475*" />
            </Grid.ColumnDefinitions>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                

                <Viewbox VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <TextBlock Text="Специальность" Padding="0"/>
                </Viewbox>

                <ComboBox Grid.Row="1" Style="{StaticResource SubCaptionBox}" IsEditable="True">
                    <ComboBox.ItemContainerStyle>
                        <StaticResource ResourceKey="ItemsBox"/>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemsSource>
                        <Binding Path="SpecialitySelect"/>
                    </ComboBox.ItemsSource>
                    <ComboBox.SelectedIndex>
                        <Binding Path="SpecialityNo" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                PropertyChanged
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.SelectedIndex>
                    <ComboBox.Text>
                        <Binding Path="SpecialityFullName" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                LostFocus
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.Text>
                </ComboBox>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                

                <Viewbox VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <TextBlock Text="Дисциплина" Padding="0" />
                </Viewbox>

                <ComboBox Grid.Row="1" Grid.Column="1" Style="{StaticResource SubCaptionBox}" IsEditable="True">
                    <ComboBox.ItemContainerStyle>
                        <StaticResource ResourceKey="ItemsBox"/>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemsSource>
                        <Binding Path="DisciplinesSelect"/>
                    </ComboBox.ItemsSource>
                    <ComboBox.SelectedIndex>
                        <Binding Path="DisciplineNo" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                PropertyChanged
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.SelectedIndex>
                    <ComboBox.Text>
                        <Binding Path="DisciplineFullName" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                PropertyChanged
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.Text>
                </ComboBox>
            </Grid>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" Background="#FFFCC7">
            <Grid.RowDefinitions>
                <RowDefinition Height="105"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>


                    <Viewbox HorizontalAlignment="Left">
                        <TextBlock Text=" Аудиторная нагрузка, часы"/>
                    </Viewbox>

                    <TextBox Grid.Column="1">
                        <TextBox.Style>
                            <StaticResource ResourceKey="HoursBox"/>
                        </TextBox.Style>
                        <TextBox.Text>
                            <Binding Path="EduHours" Mode="TwoWay">
                                <Binding.UpdateSourceTrigger>
                                    LostFocus
                                </Binding.UpdateSourceTrigger>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>


                    <Viewbox  HorizontalAlignment="Left">
                        <TextBlock Text=" Самостоятельная работа, часы"/>
                    </Viewbox>

                    <TextBox Grid.Column="1">
                        <TextBox.Style>
                            <StaticResource ResourceKey="HoursBox"/>
                        </TextBox.Style>
                        <TextBox.Text>
                            <Binding Path="SelfHours" Mode="TwoWay">
                                <Binding.UpdateSourceTrigger>
                                    LostFocus
                                </Binding.UpdateSourceTrigger>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>


                    <Viewbox HorizontalAlignment="Left">
                        <TextBlock Text=" Максимальная нагрузка, часы: "/>
                    </Viewbox>

                    <Border Grid.Column="1">
                        <Border.Background>
                            <MultiBinding Converter="{StaticResource UsedValuesConverter}">
                                <Binding Path="MaxHours"/>
                                <Binding ElementName="Total" Path="Text"/>
                            </MultiBinding>
                        </Border.Background>

                        <Viewbox HorizontalAlignment="Right">
                            <TextBlock Text="{Binding MaxHours}"/>
                        </Viewbox>
                    </Border>
                </Grid>
            </Grid>


            <Grid x:Name="TotalHoursCountPanel" Grid.Row="7" Grid.Column="1" Grid.RowSpan="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.9*"/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>


                <ScrollViewer Background="#FFFFFCC7">
                    <ScrollViewer.VerticalScrollBarVisibility>
                        Auto
                    </ScrollViewer.VerticalScrollBarVisibility>
                    <ItemsControl>
                        <ItemsControl.ItemsSource>
                            <Binding Path="Hours" Mode="TwoWay">
                                <Binding.UpdateSourceTrigger>
                                    PropertyChanged
                                </Binding.UpdateSourceTrigger>
                            </Binding>
                        </ItemsControl.ItemsSource>
                    </ItemsControl>
                </ScrollViewer>

                <Grid Grid.Row="1" Background="#FFFFFCC7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.9*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    

                    <Border>
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text=" Объём часов:" FontWeight="Bold"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="1">
                        
                        <Viewbox HorizontalAlignment="Center">
                            <TextBlock x:Name="Total" Style="{StaticResource CaptionSections}">
                                <TextBlock.Text>
                                    <Binding Path="Hours" Converter="{StaticResource HoursConverter}" />
                                    <!--<MultiBinding Converter="{StaticResource SumConverter}"/>-->
                                </TextBlock.Text>
                            </TextBlock>
                        </Viewbox>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>