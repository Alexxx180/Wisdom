<UserControl x:Class="Wisdom.Controls.Forms.DocumentForms.AddDisciplineProgram.HoursPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bind="clr-namespace:Wisdom.Binds"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <bind:CompetetionsConverter x:Key="CompetetionsConverter" />
        <bind:UsedValuesConverter x:Key="UsedValuesConverter" />
        <bind:SumConverter x:Key="SumConverter"/>
    </UserControl.Resources>

    <Grid Grid.Row="1" DataContext="{Binding Path=ViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.475*" />
                <ColumnDefinition Width="0.05*" />
                <ColumnDefinition Width="0.475*" />
            </Grid.ColumnDefinitions>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                

                <Viewbox VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <TextBlock Text="Код и название специальности" Padding="0"/>
                </Viewbox>

                <ComboBox Grid.Row="1" Style="{StaticResource SubCaptionBox}" IsEditable="True">
                    <!--SelectionChanged="ResetAllCompetetionFields"-->
                    <ComboBox.ItemContainerStyle>
                        <StaticResource ResourceKey="ItemsBox"/>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemsSource>
                        <Binding Path="SpecialitySelect"/>
                    </ComboBox.ItemsSource>
                    <ComboBox.SelectedIndex>
                        <Binding Path="SpecialityNo" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                PropertyChanged
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.SelectedIndex>
                    <ComboBox.Text>
                        <Binding Path="SpecialityFullName" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                LostFocus
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.Text>
                </ComboBox>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                

                <Viewbox VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <TextBlock Text="Код и название дисциплины" Padding="0" />
                </Viewbox>

                <ComboBox Grid.Row="1" Grid.Column="1" Style="{StaticResource SubCaptionBox}" IsEditable="True">
                    <!--SelectionChanged="ResetAllDisciplineFields"-->
                    <ComboBox.ItemContainerStyle>
                        <StaticResource ResourceKey="ItemsBox"/>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemsSource>
                        <Binding Path="DisciplinesSelect"/>
                    </ComboBox.ItemsSource>
                    <ComboBox.SelectedIndex>
                        <Binding Path="DisciplineNo" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                PropertyChanged
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.SelectedIndex>
                    <ComboBox.Text>
                        <Binding Path="DisciplineFullName" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                PropertyChanged
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.Text>
                </ComboBox>
            </Grid>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" Background="#FFFCC7">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.7*"/>
            </Grid.RowDefinitions>
            

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                

                <Viewbox HorizontalAlignment="Left">
                    <TextBlock Padding="1" Text="Аудиторная нагрузка, часы"/>
                </Viewbox>

                <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                    <TextBox Text="{Binding Path=EduHours}" Style="{StaticResource HoursBox}"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1" Background="#FFFCC7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                

                <Viewbox  HorizontalAlignment="Left">
                    <TextBlock Padding="1" Text="Самостоятельная работа, часы"/>
                </Viewbox>

                <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                    <TextBox Text="{Binding Path=SelfHours}" Style="{StaticResource HoursBox}"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="2" Background="#FFFCC7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                

                <Viewbox HorizontalAlignment="Left">
                    <TextBlock Padding="1" Text="Максимальная учебная нагрузка: "/>
                </Viewbox>

                <Viewbox HorizontalAlignment="Right" Grid.Column="1">
                    <TextBlock x:Name="Max" Text="{Binding MaxHours}"/>
                </Viewbox>
            </Grid>

            <Grid x:Name="TotalHoursCountPanel" Grid.Row="7" Grid.Column="1" Grid.RowSpan="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.9*"/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>


                <ScrollViewer Background="#FFFFFCC7">
                    <ScrollViewer.VerticalScrollBarVisibility>
                        Auto
                    </ScrollViewer.VerticalScrollBarVisibility>
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemsSource>
                            <Binding Path="Hours"/>
                        </ItemsControl.ItemsSource>
                    </ItemsControl>
                </ScrollViewer>

                <Grid Grid.Row="1" Background="#FFFFFCC7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.9*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    

                    <Border>
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text="Объём часов:" FontWeight="Bold"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="1">
                        <!--<Border.Background>
                        <MultiBinding Converter="{StaticResource UsedValuesConverter}">
                            <Binding Path="Text" ElementName="Max"></Binding>
                            <Binding Path="Text" ElementName="Inputted"></Binding>
                        </MultiBinding>
                    </Border.Background>-->
                        <Viewbox HorizontalAlignment="Center">
                            <!--<TextBlock x:Name="Inputted" Tag="{x:Reference Name=Max}" Style="{StaticResource CaptionSections}">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource SumConverter}"/>
                            </TextBlock.Text>
                        </TextBlock>-->
                        </Viewbox>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>