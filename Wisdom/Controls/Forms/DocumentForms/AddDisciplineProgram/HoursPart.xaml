<UserControl x:Class="Wisdom.Controls.DocumentForms.AddDisciplineProgram.HoursPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bind="clr-namespace:Wisdom.Binds"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <bind:CompetetionsConverter x:Key="CompetetionsConverter" />
        <bind:UsedValuesConverter x:Key="UsedValuesConverter" />
    </UserControl.Resources>
    <Grid x:Name="Form1" Grid.Row="1" Visibility="Visible" DataContext="{Binding Path=ViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.475*" />
                <ColumnDefinition Width="0.05*" />
                <ColumnDefinition Width="0.475*" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Viewbox VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <Label Content="Код и название специальности" Padding="0"/>
                </Viewbox>

                <ComboBox Grid.Row="1" Style="{StaticResource SubCaptionBox}"
                          SelectionChanged="ResetAllCompetetionFields" IsEditable="True">
                    <ComboBox.ItemContainerStyle>
                        <StaticResource ResourceKey="ItemsBox"></StaticResource>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemsSource>
                        <Binding Path="SpecialitySelect"/>
                    </ComboBox.ItemsSource>
                    <ComboBox.Text>
                        <Binding Path="SpecialityFullName" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                PropertyChanged
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.Text>
                </ComboBox>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Viewbox VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <Label Content="Код и название дисциплины" Padding="0" />
                </Viewbox>

                <ComboBox Grid.Row="1" Grid.Column="1" Style="{StaticResource SubCaptionBox}"
                          SelectionChanged="ResetAllDisciplineFields" IsEditable="True">
                    <ComboBox.ItemContainerStyle>
                        <StaticResource ResourceKey="ItemsBox"/>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemsSource>
                        <Binding Path="DisciplinesSelect"/>
                    </ComboBox.ItemsSource>
                    <ComboBox.Text>
                        <Binding Path="DisciplineFullName" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                PropertyChanged
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.Text>
                </ComboBox>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="4" Background="#FFFCC7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>

            <Viewbox HorizontalAlignment="Left">
                <TextBlock Padding="1" Text="Аудиторная нагрузка, часы"/>
            </Viewbox>

            <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                <TextBox Text="{Binding Path=EduHours}" Style="{StaticResource HoursBox}"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="5" Background="#FFFCC7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>

            <Viewbox  HorizontalAlignment="Left">
                <TextBlock Padding="1" Text="Самостоятельная работа, часы"/>
            </Viewbox>

            <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                <TextBox Text="{Binding Path=EduHours}" Style="{StaticResource HoursBox}"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="6" Background="#FFFCC7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>

            <Viewbox HorizontalAlignment="Left">
                <TextBlock Padding="1" Text="Максимальная учебная нагрузка: "/>
            </Viewbox>

            <Viewbox HorizontalAlignment="Right" Grid.Column="1">
                <TextBlock x:Name="Max" Text="{Binding MaxHours}"/>
            </Viewbox>
        </Grid>

        <Grid x:Name="TotalHoursCountPanel" Grid.Row="7" Grid.Column="1" Grid.RowSpan="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.9*"/>
                    <ColumnDefinition Width="0.1*"/>
                </Grid.ColumnDefinitions>

                <Border Background="#FFFFFCC7">
                    <Viewbox HorizontalAlignment="Left">
                        <TextBlock Text="Объём часов:" FontWeight="Bold"/>
                    </Viewbox>
                </Border>

                <Border Grid.Column="1">
                    <Border.Background>
                        <MultiBinding Converter="{StaticResource UsedValuesConverter}">
                            <Binding Path="Text" ElementName="Max"></Binding>
                            <Binding Path="Text" ElementName="Inputted"></Binding>
                        </MultiBinding>
                    </Border.Background>
                    <Viewbox HorizontalAlignment="Center">
                        <TextBlock x:Name="Inputted" Tag="{x:Reference Name=Max}" Style="{StaticResource CaptionSections}">
                            <TextBlock.Resources>
                                <bind:SumConverter x:Key="SumConverter" />
                            </TextBlock.Resources>
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource SumConverter}"/>
                            </TextBlock.Text>
                        </TextBlock>
                    </Viewbox>
                </Border>
            </Grid>

            <ScrollViewer>
                <StackPanel Background="#FFFFFCC7">
                    <Grid>
                        <!--Tag="{x:Reference RF}"-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.05*" />
                            <ColumnDefinition Width="0.15*" />
                            <ColumnDefinition Width="0.7*" />
                            <ColumnDefinition Width="0.1*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.ColumnSpan="4">
                            <ContentControl>
                                <Binding Path="Hours"/>
                            </ContentControl>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>