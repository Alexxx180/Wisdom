<UserControl x:Class="Wisdom.Controls.Forms.DocumentForms.AddDisciplineProgram.ThemePlanPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:plan="clr-namespace:Wisdom.Controls.Tables.ThemePlan"
             xmlns:levels="clr-namespace:Wisdom.Controls.Tables.EducationLevels"
             xmlns:bind="clr-namespace:Wisdom.Binds"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!--<bind:CompetetionsConverter x:Key="CompetetionsConverter" />
        <bind:UsedValuesConverter x:Key="UsedValuesConverter" />
        <bind:SumConverter x:Key="SumConverter" />-->
    </UserControl.Resources>

    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.025*"/>
            <ColumnDefinition Width="0.95*"/>
            <ColumnDefinition Width="0.025*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.11*" />
                <RowDefinition Height="0.89*" />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Style="{StaticResource ThemePlan}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.37*" />
                        <ColumnDefinition Width="0.13*" />
                        <ColumnDefinition Width="0.37*" />
                        <ColumnDefinition Width="0.13*" />
                    </Grid.ColumnDefinitions>


                    <Border Grid.Row="1">
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text="Всего доступно:"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1">
                        <Viewbox HorizontalAlignment="Center">
                            <TextBlock x:Name="AvailableInputted">
                                <TextBlock.Text>
                                    0
                                </TextBlock.Text>
                            </TextBlock>
                        </Viewbox>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="2">
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text="Объём часов:" />
                        </Viewbox>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="3">
                        <Viewbox HorizontalAlignment="Center">
                            <TextBlock x:Name="TotalHoursUsed" Tag="{x:Reference AvailableInputted}">
                                <TextBlock.Text>
                                    1
                                </TextBlock.Text>
                            </TextBlock>
                        </Viewbox>
                    </Border>
                </Grid>

                <Grid Grid.Row="1" Background="#FF03C6FF" Style="{StaticResource ListCaptions}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.05*" />
                        <ColumnDefinition Width="0.15*" />
                        <ColumnDefinition Width="0.491*" />
                        <ColumnDefinition Width="0.09*" />
                        <ColumnDefinition Width="0.2*" />
                        <ColumnDefinition Width="0.05*" />
                        <ColumnDefinition Width="0.019*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1">
                        <Viewbox HorizontalAlignment="Left" >
                            <TextBlock Text="Секция"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="2" Grid.ColumnSpan="2">
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text="Наименование"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="3">
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text="Часы"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="4">
                        <Viewbox HorizontalAlignment="Right">
                            <TextBlock Text="Компетенции"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="5">
                        <Viewbox HorizontalAlignment="Right">
                            <TextBlock Text="УО"/>
                        </Viewbox>
                    </Border>
                </Grid>
            </Grid>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.06*" />
                <RowDefinition Height="0.94*" />
            </Grid.RowDefinitions>


            <Grid Background="#FF03C6FF" Style="{StaticResource ListCaptions}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.05*" />
                    <ColumnDefinition Width="0.158*" />
                    <ColumnDefinition Width="0.304*" />
                    <ColumnDefinition Width="0.509*" />
                    <ColumnDefinition Width="0.019*" />
                </Grid.ColumnDefinitions>


                <Viewbox Grid.Column="1" HorizontalAlignment="Left">
                    <TextBlock Text="№"/>
                </Viewbox>

                <Viewbox Grid.Column="2" HorizontalAlignment="Left">
                    <TextBlock Text="Название"/>
                </Viewbox>

                <Viewbox Grid.Column="3" HorizontalAlignment="Left">
                    <TextBlock Text="Описание"/>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>