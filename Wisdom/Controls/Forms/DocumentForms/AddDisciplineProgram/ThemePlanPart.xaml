<UserControl x:Class="Wisdom.Controls.DocumentForms.AddDisciplineProgram.ThemePlanPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wisdom.Controls.DocumentForms.AddDisciplineProgram"
             xmlns:plan="clr-namespace:Wisdom.Controls.ThemePlan"
             xmlns:levels="clr-namespace:Wisdom.Controls.EducationLevels"
             xmlns:bind="clr-namespace:Wisdom.Binds"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <bind:CompetetionsConverter x:Key="CompetetionsConverter" />
        <bind:UsedValuesConverter x:Key="UsedValuesConverter" />
    </UserControl.Resources>
    <Grid x:Name="Form3" Grid.Row="1" Visibility="Hidden">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.125*"/>
            <ColumnDefinition Width="0.27*"/>
            <ColumnDefinition Width="0.38*"/>
            <ColumnDefinition Width="0.075*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--<Button x:Name="ThemePlanSwitch" Click="SwitchPlan" Tag="{x:Reference ThemePlan}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"  Content="Тематический план" Style="{StaticResource Steps3}" IsEnabled="False" />
        <Button x:Name="LearnLevelsSwitch" Click="SwitchPlan" Tag="{x:Reference LearnLevels}" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2"  Content="Уровни освоения" Style="{StaticResource Steps3}"  />-->

        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Grid.RowSpan="17" x:Name="ThemePlan" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.11*" />
                <RowDefinition Height="0.89*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="5" x:Name="ThemePlanCaption">
                <!---->

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.37*" />
                        <ColumnDefinition Width="0.13*" />
                        <ColumnDefinition Width="0.37*" />
                        <ColumnDefinition Width="0.13*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="1" Grid.Column="0" Background="#FFFFFCC7" >
                        <Viewbox HorizontalAlignment="Left">
                            <Label Content="Всего доступно:" FontWeight="Bold"></Label>
                        </Viewbox>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" Background="#FFFFFCC7">
                        <Viewbox HorizontalAlignment="Right">
                            <Label x:Name="AvailableInputted" Content="{Binding ElementName=Inputted, Path=Content}" FontWeight="Bold"></Label>
                        </Viewbox>
                    </Border>

                    <Border Background="#FFFFFCC7" Grid.Row="1" Grid.Column="2">
                        <Viewbox HorizontalAlignment="Left">
                            <Label  Content="Объём часов:" FontWeight="Bold" Background="#FFFFFCC7"></Label>
                        </Viewbox>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="3">
                        <Border.Background>
                            <MultiBinding Converter="{StaticResource UsedValuesConverter}">
                                <Binding Path="Content" ElementName="AvailableInputted"></Binding>
                                <Binding Path="Content" ElementName="TotalHoursUsed"></Binding>
                            </MultiBinding>
                        </Border.Background>
                        <Viewbox HorizontalAlignment="Right">
                            <Label x:Name="TotalHoursUsed" Tag="{x:Reference AvailableInputted}" FontWeight="Bold" >
                                <Label.Resources>
                                    <bind:SumConverter x:Key="SumConverter" />
                                </Label.Resources>
                                <Label.Content>
                                    <MultiBinding x:Name="TotalHoursUsedBind" Converter="{StaticResource SumConverter}">
                                        <!--<Binding Path="Text" ElementName="SectionHours"></Binding>-->
                                    </MultiBinding>
                                </Label.Content>
                            </Label>
                        </Viewbox>
                    </Border>

                </Grid>

                <Grid Grid.Row="1" Background="#FF03C6FF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.05*" />
                        <ColumnDefinition Width="0.15*" />
                        <ColumnDefinition Width="0.491*" />
                        <ColumnDefinition Width="0.09*" />
                        <ColumnDefinition Width="0.2*" />
                        <ColumnDefinition Width="0.05*" />
                        <ColumnDefinition Width="0.019*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Left" >
                            <Label  Content="Секция" Style="{StaticResource ListCaptions}"></Label>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Left">
                            <Label  Content="Наименование" Style="{StaticResource ListCaptions}"></Label>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Left">
                            <Label Content="Часы" Style="{StaticResource ListCaptions}"></Label>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="4" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Right">
                            <Label Content="Компетенции" Style="{StaticResource ListCaptions}"></Label>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="5" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Right">
                            <Label Content="УО" Style="{StaticResource ListCaptions}"></Label>
                        </Viewbox>
                    </Border>

                </Grid>

            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <!-- Grid.Column="1" Grid.ColumnSpan="5" Grid.RowSpan="9" Tag="{x:Reference AllSectionsContents}"-->
                <StackPanel Background="#FFFFFCC7"  x:Name="DisciplinePlan">
                    <plan:PlanTopicAdditor/>
                </StackPanel>
            </ScrollViewer>

        </Grid>

        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Grid.RowSpan="17" x:Name="LearnLevels" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.06*" />
                <RowDefinition Height="0.94*" />
            </Grid.RowDefinitions>

            <Viewbox>
                <TextBlock x:Name="LvComment" Style="{StaticResource RegularSections}">
                    <TextBlock.Text>
                        Для характеристики уровня освоения учебного материала используются следующие обозначения:
                    </TextBlock.Text>
                </TextBlock>
            </Viewbox>

            <Grid Grid.Row="1" Grid.Column="1" Background="#FF03C6FF" Grid.ColumnSpan="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.05*" />
                    <ColumnDefinition Width="0.158*" />
                    <ColumnDefinition Width="0.304*" />
                    <ColumnDefinition Width="0.509*" />
                    <ColumnDefinition Width="0.019*" />
                </Grid.ColumnDefinitions>

                <Viewbox Grid.Column="1" HorizontalAlignment="Left">
                    <Label Content="№" Style="{StaticResource ListCaptions}"></Label>
                </Viewbox>
                <Viewbox Grid.Column="2" HorizontalAlignment="Left">
                    <Label Content="Название" Style="{StaticResource ListCaptions}"></Label>
                </Viewbox>
                <Viewbox Grid.Column="3" HorizontalAlignment="Left">
                    <Label Content="Описание" Style="{StaticResource ListCaptions}"></Label>
                </Viewbox>
            </Grid>

            <ScrollViewer  Grid.Row="16" Grid.Column="1" Grid.ColumnSpan="5" Grid.RowSpan="3">
                <StackPanel x:Name="Levels"  Background="#FFFFFCC7">
                    <levels:EducationLevelAdditor/>
                </StackPanel>
            </ScrollViewer>

        </Grid>

    </Grid>
</UserControl>