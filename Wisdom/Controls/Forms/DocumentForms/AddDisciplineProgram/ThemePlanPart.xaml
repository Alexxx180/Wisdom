<UserControl x:Class="Wisdom.Controls.Forms.DocumentForms.AddDisciplineProgram.ThemePlanPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:plan="clr-namespace:Wisdom.Controls.Tables.ThemePlan"
             xmlns:levels="clr-namespace:Wisdom.Controls.Tables.EducationLevels"
             xmlns:bind="clr-namespace:Wisdom.Binds"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!--<bind:CompetetionsConverter x:Key="CompetetionsConverter" />
        <bind:UsedValuesConverter x:Key="UsedValuesConverter" />
        <bind:SumConverter x:Key="SumConverter" />-->
    </UserControl.Resources>
    
    <Grid x:Name="Form3" Grid.Row="1" Visibility="Hidden">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.125*"/>
            <ColumnDefinition Width="0.27*"/>
            <ColumnDefinition Width="0.38*"/>
            <ColumnDefinition Width="0.075*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Grid.RowSpan="17" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.11*" />
                <RowDefinition Height="0.89*" />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.37*" />
                        <ColumnDefinition Width="0.13*" />
                        <ColumnDefinition Width="0.37*" />
                        <ColumnDefinition Width="0.13*" />
                    </Grid.ColumnDefinitions>


                    <Border Grid.Row="1" Style="{StaticResource ThemePlan}">
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text="Всего доступно:"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource ThemePlan}">
                        <Viewbox HorizontalAlignment="Right">
                            <TextBlock x:Name="AvailableInputted">
                                <TextBlock.Text>
                                    0
                                </TextBlock.Text>
                            </TextBlock>
                        </Viewbox>
                    </Border>

                    <Border Style="{StaticResource ThemePlan}" Grid.Row="1" Grid.Column="2">
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text="Объём часов:" />
                        </Viewbox>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="3">
                        <Viewbox HorizontalAlignment="Right">
                            <TextBlock x:Name="TotalHoursUsed" Tag="{x:Reference AvailableInputted}" FontWeight="Bold" >
                                <TextBlock.Text>
                                    1
                                </TextBlock.Text>
                            </TextBlock>
                        </Viewbox>
                    </Border>
                </Grid>

                <Grid Grid.Row="1" Background="#FF03C6FF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.05*" />
                        <ColumnDefinition Width="0.15*" />
                        <ColumnDefinition Width="0.491*" />
                        <ColumnDefinition Width="0.09*" />
                        <ColumnDefinition Width="0.2*" />
                        <ColumnDefinition Width="0.05*" />
                        <ColumnDefinition Width="0.019*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Left" >
                            <TextBlock Text="Секция"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text="Наименование"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Left">
                            <TextBlock Text="Часы"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="4" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Right">
                            <TextBlock Text="Компетенции"/>
                        </Viewbox>
                    </Border>

                    <Border Grid.Column="5" Style="{StaticResource ListCaptions}">
                        <Viewbox HorizontalAlignment="Right">
                            <TextBlock Text="УО"/>
                        </Viewbox>
                    </Border>
                </Grid>
            </Grid>

        </Grid>

        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Grid.RowSpan="17" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.06*" />
                <RowDefinition Height="0.94*" />
            </Grid.RowDefinitions>

            <Viewbox>
                <TextBlock Style="{StaticResource RegularSections}">
                    <TextBlock.Text>
                        Для характеристики уровня освоения учебного материала используются следующие обозначения:
                    </TextBlock.Text>
                </TextBlock>
            </Viewbox>

            <Grid Grid.Row="1" Grid.Column="1" Background="#FF03C6FF" Grid.ColumnSpan="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.05*" />
                    <ColumnDefinition Width="0.158*" />
                    <ColumnDefinition Width="0.304*" />
                    <ColumnDefinition Width="0.509*" />
                    <ColumnDefinition Width="0.019*" />
                </Grid.ColumnDefinitions>

                <Viewbox Grid.Column="1" HorizontalAlignment="Left">
                    <TextBlock Text="№" Style="{StaticResource ListCaptions}"/>
                </Viewbox>
                <Viewbox Grid.Column="2" HorizontalAlignment="Left">
                    <TextBlock Text="Название" Style="{StaticResource ListCaptions}"/>
                </Viewbox>
                <Viewbox Grid.Column="3" HorizontalAlignment="Left">
                    <TextBlock Text="Описание" Style="{StaticResource ListCaptions}"/>
                </Viewbox>
            </Grid>

            
        </Grid>
    </Grid>
</UserControl>